{% extends 'admin/base.twig' %}

{% block body %}
    <table id="table_id">
        <thead>
            <tr>
                <th>Название</th>
                <th>Тип датчиков</th>
                <th>Тип установки</th>
                <th>Длинна</th>
                <th>Модель</th>
                <th>Предел взвешивания</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            {% for item in tkpList %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td>{{ item.type_sensor }}</td>
                    <td>{{ item.type_instalation }}</td>
                    <td>{{ item.length }}</td>
                    <td>{{ item.model }}</td>
                    <td>{{ item.weight }}</td>
                    <td>
                        <a href="/admin/tkp-editor/auto/{{ item.id }}">
                            <button class="tkp-btn update-tkp" data-item="{{ item.id }}" data-type="auto"><img src="/assets/img/icons/admin-icons/edit.svg" alt=""></button>
                        </a>
                    </td>
                    <td><button class="tkp-btn delete-tkp" data-item="{{ item.id }}" data-type="auto"><img src="/assets/img/icons/admin-icons/delete.svg" alt=""></button></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
